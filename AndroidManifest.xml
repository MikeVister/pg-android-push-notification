<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
      package="net.edarling.mobile"
      android:versionCode="1"
      android:versionName="1.0">

    <!-- Only this application can receive the messages and registration result -->
    <permission android:name="net.edarling.mobile.permission.C2D_MESSAGE" android:protectionLevel="signature" />
    <uses-permission android:name="net.edarling.mobile.permission.C2D_MESSAGE" />

    <!-- This app has permission to register and receive message -->
    <uses-permission android:name="com.google.android.c2dm.permission.RECEIVE" />

    <!-- Send the registration id to the server -->
    <uses-permission android:name="android.permission.INTERNET" />


    <application android:label="@string/app_name" >

        <!-- Only C2DM servers can send messages for the app. If permission is not set - any other app can generate it -->
        <receiver android:name="net.edarling.mobile.NPNC2DMReceiver" android:permission="com.google.android.c2dm.permission.SEND">
            <!-- Receive the actual message -->
            <intent-filter>
                <action android:name="com.google.android.c2dm.intent.RECEIVE" />
                <category android:name="net.edarling.mobile" />
            </intent-filter>
            <!-- Receive the registration id -->
            <intent-filter>
                <action android:name="com.google.android.c2dm.intent.REGISTRATION" />
                <category android:name="net.edarling.mobile" />
            </intent-filter>
        </receiver>
        <activity android:name="net.edarling.mobile.NotificationDialogActivity" />

        <activity android:name="net.edarling.mobile.NPNActivity"
                  android:label="@string/app_name">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

        </activity>
    </application>
</manifest> 
